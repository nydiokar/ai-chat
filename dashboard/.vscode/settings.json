{
    // Disable all CSS validation
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,

    // Disable CSS linting
    "stylelint.enable": false,

    // Enable better suggestions in template literals and className props
    "editor.quickSuggestions": {
        "strings": true
    },

    // Tell VS Code how to interpret different file types
    "files.associations": {
        "*.css": "tailwindcss"
    },

    // Configure Tailwind CSS IntelliSense
    "tailwindCSS.includeLanguages": {
        "typescript": "javascript",
        "typescriptreact": "javascript"
    },
    

    // Enable Tailwind CSS class validation
    "tailwindCSS.validate": true,

    // Disable CSS module validation
    "cssModules.validate": false
}