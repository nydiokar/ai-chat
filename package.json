{
  "name": "them",
  "version": "0.4.1",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "bot": "ts-node src/discord-bot.ts",
    "bot:prod": "node dist/discord-bot.js",
    "bot:start": "pm2 start ecosystem.config.js",
    "bot:stop": "pm2 stop them-bot",
    "bot:logs": "pm2 logs them-bot",
    "bot:monit": "pm2 monit",
    "db:init": "prisma migrate dev --name init",
    "db:sync": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "prisma:generate": "prisma generate",
    "pretest": "npm run build && npm run db:sync",
    "test": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register \"src/**/*.test.ts\"",
    "test:watch": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register --watch",
    "test:coverage": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" c8 mocha --require ts-node/register",
    "test:unit": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register \"src/**/*.test.ts\"",
    "test:integration": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register src/tests/mcp_openai_integration.test.ts",
    "test:tokens": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register \"src/features/hot-tokens/services/hot-tokens-service.test.ts\"",
    "test:mcp": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register \"src/tools/mcp/**/*.test.ts\"",
    "test:mcp:watch": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register --watch \"src/tools/mcp/**/*.test.ts\"",
    "test:ci": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register --forbid-only \"src/**/*.test.ts\"",
    "test:mcp-openai": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register --reporter min src/tests/mcp_openai_integration.test.ts",
    "test:mcp-github": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --require ts-node/register --reporter min src/tests/mcp_openai_integration.test.ts",
    "lint": "eslint src/**/*.{js,ts,jsx,tsx}",
    "lint:fix": "eslint src/**/*.{js,ts,jsx,tsx} --fix"
  },
  "bin": {
    "them": "./dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@modelcontextprotocol/sdk": "^1.1.1",
    "@modelcontextprotocol/server-brave-search": "^0.6.2",
    "@modelcontextprotocol/server-github": "^2025.1.23",
    "@prisma/client": "^6.5.0",
    "@types/clipboardy": "^2.0.4",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.10.5",
    "@types/node-cache": "^4.1.3",
    "@types/sinon": "^17.0.3",
    "@types/winston": "^2.4.4",
    "anthropic": "^0.0.0",
    "axios": "^1.7.9",
    "blessed": "^0.1.81",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^13.0.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.7",
    "inquirer": "^9.2.12",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "inversify": "^7.1.0",
    "keyv": "^5.2.3",
    "keyv-file": "^5.1.1",
    "mcp": "^1.3.4",
    "node-cache": "^5.1.2",
    "nodecache": "^0.0.2",
    "ollama": "^0.5.14",
    "openai": "^4.78.1",
    "ora": "^7.0.1",
    "pm2": "^5.3.1",
    "reflect-metadata": "^0.2.2",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/inquirer": "^9.0.7",
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "@types/keyv": "^4.2.0",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^17.0.3",
    "c8": "^10.1.3",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "mocha-clean": "^1.0.0",
    "postcss": "^8.5.3",
    "prisma": "^6.5.0",
    "tailwindcss": "^4.0.11",
    "ts-node-dev": "^2.0.0"
  }
}
