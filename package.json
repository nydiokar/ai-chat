{
  "name": "them",
  "version": "0.6.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "bot": "ts-node src/discord-bot.ts",
    "bot:prod": "pm2 start ecosystem.config.cjs --only them-bot",
    "bot:dev": "pm2 start ecosystem.config.cjs --only them-bot-dev",
    "bot:stop:prod": "pm2 stop them-bot",
    "bot:stop:dev": "pm2 stop them-bot-dev",
    "bot:logs:prod": "pm2 logs them-bot",
    "bot:logs:dev": "pm2 logs them-bot-dev",
    "bot:monit": "pm2 monit",
    "prisma:generate": "prisma generate",
    "pretest": "npm run build && npm run db:sync",
    "test:watch": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha --watch",
    "test:coverage": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" c8 mocha",
    "test:unit": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha \"src/**/*.test.ts\"",
    "test:tokens": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha \"src/features/hot-tokens/services/hot-tokens-service.test.ts\"",
    "test:mcp": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha \"src/tools/mcp/**/*.test.ts\"",
    "test:mcp:schema": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" mocha \"src/tools/mcp/types/tools.test.ts\"",
    "test:github": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node -r tsconfig-paths/register src/features/pulse-mcp/tests/test-github-installation.ts",
    "lint": "eslint src/**/*.{js,ts,jsx,tsx}",
    "lint:fix": "eslint src/**/*.{js,ts,jsx,tsx} --fix",
    "mcp:tools": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/tools/mcp/types/tools.test.ts",
    "mcp:status": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/tools/mcp/dashboard-cli.ts",
    "mcp:dashboard": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/tools/mcp/start-dashboard.ts",
    "mcp:dashboard:dev": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" ts-node-dev --respawn src/tools/mcp/start-dashboard.ts",
    "db:setup:dev": "cross-env NODE_ENV=development node scripts/manage-db.js setup",
    "db:setup:prod": "cross-env NODE_ENV=production node scripts/manage-db.js setup",
    "db:generate:dev": "cross-env NODE_ENV=development node scripts/manage-db.js generate",
    "db:generate:prod": "cross-env NODE_ENV=production node scripts/manage-db.js generate",
    "db:migrate:dev": "cross-env NODE_ENV=development node scripts/manage-db.js migrate",
    "db:migrate:prod": "cross-env NODE_ENV=production node scripts/manage-db.js migrate"
  },
  "bin": {
    "them": "./dist/index.js",
    "mcp-status": "./dist/tools/mcp/dashboard-cli.js",
    "mcp-dashboard": "./dist/tools/mcp/start-dashboard.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@kimtaeyoon83/mcp-server-youtube-transcript": "^0.1.1",
    "@modelcontextprotocol/sdk": "^1.1.1",
    "@modelcontextprotocol/server-brave-search": "^0.6.2",
    "@modelcontextprotocol/server-github": "^2025.1.23",
    "@prisma/client": "^6.5.0",
    "@types/node": "^22.10.5",
    "@types/node-cache": "^4.1.3",
    "anthropic": "^0.0.0",
    "axios": "^1.7.9",
    "blessed": "^0.1.81",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^13.0.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "inquirer": "^9.2.12",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "inversify": "^7.1.0",
    "keyv": "^5.2.3",
    "keyv-file": "^5.1.1",
    "mcp": "^1.3.4",
    "node-cache": "^5.1.2",
    "nodecache": "^0.0.2",
    "ollama": "^0.5.14",
    "openai": "^4.78.1",
    "ora": "^7.0.1",
    "pg": "^8.14.1",
    "pm2": "^5.3.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/chai": "^5.2.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/clipboardy": "^2.0.4",
    "@types/dotenv": "^8.2.3",
    "@types/inquirer": "^9.0.7",
    "@types/inquirer-autocomplete-prompt": "^3.0.3",
    "@types/keyv": "^4.2.0",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "chai": "^4.3.10",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "mocha-clean": "^1.0.0",
    "postcss": "^8.5.3",
    "prisma": "^6.5.0",
    "tailwindcss": "^4.0.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "type": "module"
}
